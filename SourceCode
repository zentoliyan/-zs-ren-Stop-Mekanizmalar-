//@version=5
indicator("İzsüren Stop Mekanizmaları", overlay = true)

f_yuksekdusuk_input_show = input.bool(false)
f_atr_input_show = input.bool(true)

//

f_yuksekdusuk_input_len = input.int(5)

f_yuksekdusuk_yuksek = ta.highest(f_yuksekdusuk_input_len)
f_yuksekdusuk_dusuk = ta.lowest(f_yuksekdusuk_input_len)

plot(f_yuksekdusuk_input_show ? f_yuksekdusuk_yuksek : na, color = color.green)
plot(f_yuksekdusuk_input_show ? f_yuksekdusuk_dusuk : na, color = color.red)

//

f_atr_len = input.int(14)

f_atr_islenmis = close - (ta.atr(f_atr_len) / 2)

plot(f_atr_input_show ? f_atr_islenmis : na)

//

table f_trailing_stop_yuzdeli_table = table.new(position.middle_right, columns = 3, rows = 13)

f_trailing_stop_yuzdeli_giris_f = input.int(50, title = "Giriş Fiyatı")
f_trailing_stop_yuzdeli_stop_tasima_y = input.float(0.1, title = "Zarar Stopunuz Yüzde Kaç ile Hareket Etsin?")

f_trailing_stop_yuzdeli_stp_1 = f_trailing_stop_yuzdeli_giris_f + (f_trailing_stop_yuzdeli_giris_f * f_trailing_stop_yuzdeli_stop_tasima_y )

table.cell(f_trailing_stop_yuzdeli_table, 0, 0,  "Stop Noktası",    text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 0,  "Stop Noktası",    text_color = color.black)

table.cell(f_trailing_stop_yuzdeli_table, 0, 1,  "Stop Noktası 1",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 2,  "Stop Noktası 2",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 3,  "Stop Noktası 3",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 4,  "Stop Noktası 4",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 5,  "Stop Noktası 5",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 7,  "Stop Noktası 6",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 8,  "Stop Noktası 7",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 9,  "Stop Noktası 8",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 10, "Stop Noktası 9",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 0, 11, "Stop Noktası 10", text_color = color.black)

table.cell(f_trailing_stop_yuzdeli_table, 1, 1,  str.tostring(f_trailing_stop_yuzdeli_stp_1),  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 2,  "Stop Noktası 2",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 3,  "Stop Noktası 3",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 4,  "Stop Noktası 4",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 5,  "Stop Noktası 5",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 7,  "Stop Noktası 6",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 8,  "Stop Noktası 7",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 9,  "Stop Noktası 8",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 10, "Stop Noktası 9",  text_color = color.black)
table.cell(f_trailing_stop_yuzdeli_table, 1, 11, "Stop Noktası 10", text_color = color.black)
